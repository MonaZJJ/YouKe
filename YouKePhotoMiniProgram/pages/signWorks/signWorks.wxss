/* pages/signWorks/signWorks.wxss */

.signWorks {
  margin: 20rpx 30rpx;
}

.signImg {
  background-color: #000;
  width: 690rpx;
  height: 388rpx;
  border-radius: 14rpx;
  position: relative;
  margin: 20rpx auto;
}

.signImg image {
  width: 690rpx;
  height: 388rpx;
  border-radius: 14rpx;
  -webkit-mask: -webkit-linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6));
  mask: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6));
}

.signImg .imgDesc {
  font-size: 68rpx;
  color: #fff;
  font-weight: bold;
  position: absolute;
  top: 150rpx;
  left: 244rpx;
}

.signIntro {
  font-size: 28rpx;
  color: #383838;
  text-indent: 8%;
  overflow: hidden;
 
  text-align: justify;
  margin-top: 38rpx;
}

/* 作品集 */
.sampleReels_Box{
  margin: 30rpx;
  border-radius:14rpx;
  overflow: hidden;
  position: relative;
  display: flow-root;
}
.srItem{
  float: left;
  display: flex;
  margin-left:5rpx;
  box-sizing: border-box;
  margin-right: 10rpx;
  z-index: 8;
}
.srItem:nth-child(2){
  margin-right: 0rpx;
}
.srItem>view{
  width: 100%;
}
.loadImage{
  width: 100%;
  display: block;
}
.listBottom {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f8f8f8;
}
.listBtmAvatarBox{
  width:60rpx;
  height:60rpx;
  margin-left:15rpx;
  position: relative;
}
.listBtmGouImg{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  z-index: 4;
  right: 0;
  bottom: 0;
}
.name {
  font-size: 26rpx;
  color: #383838;
  margin-left: 14rpx;
  width:170rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.num {
  font-size: 24rpx;
  color: #8a8a8a;
  margin-left: 20rpx;
}
