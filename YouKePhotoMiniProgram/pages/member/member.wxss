/*我的页面样式 */

page {
  background: #f8f8f8;
  /* font-family: "微软雅黑"; */
}

.heading {
  width: 100%;
  height: 485rpx;
  background: #fff;
  position: relative;
  z-index: 1;
  text-align: center;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.headImg {
  width: 160rpx;
  height: 160rpx;
  padding-top: 40rpx;
  margin: 0 auto;
  position: relative;
}

.head_avatarImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.gouImg {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  z-index: 4;
  right: 8rpx;
  bottom: 5rpx;
}

.myName {
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  width: 322rpx;
  margin: 16rpx auto;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.motto {
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
  margin: 18rpx auto;
  width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.bottomInfo {
  position: absolute;
  top: 378rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: space-around;
  color: #383838;
}

.fansItem::before {
  content: "";
  display: block;
  position: absolute;
  top: 30rpx;
  left: 33%;
  width: 1px;
  height: 24rpx;
  background: #a8a7a7;
}

.fansItem::after {
  content: "";
  display: block;
  position: absolute;
  top: 30rpx;
  left: 66%;
  width: 2rpx;
  height: 24rpx;
  background: #a8a7a7;
}

.number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: -6rpx;
}

.desc {
  font-size: 24rpx;
  font-weight: 400;
}

.middle {
  height: 302rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.row {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
}

.left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.row image {
  width: 34rpx;
  height: 36rpx;
}

.right .img {
  width: 30rpx;
  height: 30rpx;
  padding-right: 6rpx;
}

.middleTitle {
  font-size: 32rpx;
  color: #383838;
  margin-left: 18rpx;
  position: relative;
}
.unread{
  width:12rpx;
  height:12rpx;
  border-radius: 50%;
  background-color: rgb(223, 7, 7);
  margin-right: 430rpx;
  margin-top:6rpx;
}

.collect {
  border: none;
}

.tail {
  height: 302rpx;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.button {
  background: transparent;
  margin: 0;
  padding: 0;
}

.button::after {
  content: "";
  border: none;
  outline: none;
}

.foot {
  background-color: #fff;
  padding: 22rpx 30rpx;
}

/* 联系我们弹窗 */

.conArea {
  padding: 58rpx 0rpx 0rpx 159rpx;
  color: #383838;
  font-size: 36rpx;
  line-height: 30rpx;
}

.con_title {
  font-size: 28rpx;
  margin-top: 60rpx;
  margin-bottom: 30rpx;
}
