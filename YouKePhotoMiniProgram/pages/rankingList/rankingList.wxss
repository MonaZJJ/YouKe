.list_box{
  margin: 0rpx 20rpx;
}
.box_top{
  margin: 60rpx 0rpx 88rpx 0rpx;
  font-size: 28rpx;
  line-height: 53rpx;
  color: #383838;
  font-weight:600;
}
.box_top_first{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.quesImg{
  width:38rpx;
  height:38rpx;
  vertical-align: middle;
}
.box_top text{
  font-size: 38rpx;
  margin-right: 30rpx;
  position: relative;
  top: 4rpx;
  font-weight:500;
}
.box_top text::before{
  content: "";
  display: block;
  position: absolute;
  z-index: -1;
  left: 4rpx;
  bottom: 2rpx;
  width: 120rpx;
  height: 20rpx;
  background:linear-gradient(90deg,rgba(255,233,208,1) 0%,rgba(244,241,228,1) 100%,rgba(255,233,208,1) 100%,rgba(244,241,228,1) 100%);
}
.list_item{
  width: 100%;
  height:174rpx;
  background: #fff;
  box-shadow:0px 0px 20rpx 0px #D6D6D6;
  border-radius: 14rpx;
  margin-bottom: 78rpx;
  position: relative;
}
.list_img_box{
  width:165rpx;
  height:165rpx;
  position: absolute;
  top:-28rpx;
  left: 36rpx;
}
.itemGouImg{
  width:38rpx;
  height:38rpx;
  position: absolute;
  z-index: 4;
  bottom: 10rpx;
  right: 15rpx;
}
.itemImg{
  width:165rpx;
  height:165rpx;
  border-radius: 50%;
}
.itemInfo{
  margin-left: 236rpx;
  margin-right: 30rpx;
  font-size: 24rpx;
  height: 100%;
  color: #8b8b8b;
}
.itemInfo view{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.topImg{
  width:35rpx;
  height:26rpx;
  margin-right: 11rpx;
}
.info_top{
  padding-top: 38rpx;
  height: 67rpx;
}
.info_top .info_name{
  font-size: 48rpx;
  color: #383838;
  font-weight:600;
  width: 140px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.topNum{
  font-size: 38rpx;
}
.topNum_first{
  color: #F65858;
}
.info_btm text:first-child{
  color: #B7B7B7;
}
.votes{
  position: relative;
  top: -5rpx;
}

.conArea{
  padding: 20rpx;
}
.con_quesTitle{
  font-size: 32rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.con_quesCon{
  font-size: 26rpx;
  text-indent: 2em;
}