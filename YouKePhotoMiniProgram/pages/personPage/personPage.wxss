/* 个人主页样式 */

.personTop {
  height: 590rpx;
  border-bottom: 1rpx solid #ddd;
  margin: 0 30rpx;
  z-index: -1;
  margin-bottom: 10rpx;
}

.img {
  padding-top: 40rpx;
  width:160rpx;
  height:160rpx;
  margin: 0 auto;
  position: relative;
}
.perGouImg{
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  z-index: 4;
  right: 8rpx;
  bottom: 5rpx;
}

.name {
  font-size: 38rpx;
  color: #383838;
  font-weight: bold;
  text-align: center;
  margin: 14rpx auto;
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.motto {
  font-size: 24rpx;
  color: #8a8a8a;
  font-weight: 400;
  text-align: center;
  margin: 24rpx auto;
  width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.concerned {
  width: 150rpx;
  height: 48rpx;
  border: 2rpx solid #8a8a8a;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #8a8a8a;
  text-align: center;
  line-height: 48rpx;
  margin: 26rpx auto;
}

.ec {
  border-color: #383838;
  color: #383838;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 26rpx;
  background-color: transparent;
}

button::after {
  border: none;
}

.text {
  font-size: 28rpx;
  color: #383838;
  font-weight: 400;
}

.personBottom {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

/* 海报 */

.poster {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 550rpx;
  z-index: 999;
}

.canvas {
  width: 100%;
  height: 750rpx;
  border-radius: 14rpx;
  overflow: hidden;
  /* background-color: #fff; */
  z-index: 999;
  margin-top: 150rpx;
}

.canvas canvas {
  width: 100%;
  height: 750rpx;
  z-index: 999;
}

.saveImg {
  width: 300rpx;
  height: 78rpx;
  line-height: 78rpx;
  background: #fff;
  color: #424242;
  font-size: 30rpx;
  text-align: center;
  border-radius: 39rpx;
  margin: 50rpx auto;
}

/* 遮罩层 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  z-index: 444;
  top: 0;
  left: 0;
  opacity: 0.6;
}

/* 获奖情况 */

.getBox {
  margin-bottom: 20rpx;
}

.box_top {
  margin: 0rpx 0rpx 40rpx 30rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #383838;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.box_top text {
  font-size: 38rpx;
  margin-right: 30rpx;
  font-weight: bold;
  position: relative;
  top: 4rpx;
}

.box_top text::before {
  content: "";
  display: block;
  position: absolute;
  z-index: -1;
  left: 0rpx;
  bottom: 0rpx;
  width: 120rpx;
  height: 20rpx;
  background:linear-gradient(90deg,rgba(255,233,208,1) 0%,rgba(244,241,228,1) 100%,rgba(255,233,208,1) 100%,rgba(244,241,228,1) 100%);
}

.gainImg {
  background-color: #000;
  width: 690rpx;
  height: 240rpx;
  border-radius: 14rpx;
  position: relative;
  margin: 20rpx 30rpx;
}

.gainImg image {
  width: 690rpx;
  height: 240rpx;
  border-radius: 14rpx;
  -webkit-mask: -webkit-linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4));
  mask: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4));
}

.title {
  position: relative;
  font-size: 48rpx;
  color: #fff;
  font-weight: 500;
  margin-top: -200rpx;
  text-align: center;
  z-index: 112;
}

.award {
  position: relative;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 20rpx;
  text-align: center;
  letter-spacing: 4rpx;
  z-index: 112;
}
