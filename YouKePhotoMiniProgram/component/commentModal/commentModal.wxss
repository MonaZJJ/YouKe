.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  z-index: 222;
  top: 0;
  left: 0;
  opacity: 0.6;
}

.com_madol{
  width: 710rpx;
  height: 310rpx;
  position: fixed;
  z-index: 333;
  left: 50%;
  transform: translate(-50%, 0);
  background: #fff;
  border-radius: 14rpx;
}
.com_madol textarea{
  margin: 17rpx 0 0 15rpx;
  width:660rpx;
  height:210rpx;
  background: #F5F5F5;
  border-radius: 14rpx;
  color: #383838;
  font-size: 26rpx;
  line-height: 32rpx;
  padding: 10rpx;
}
.com_madol_btm{
  display: flex;
  display: -webkit-flex; 
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  padding: 0  25rpx;
  margin-top: 12rpx;
}
.modal_sendOut{
  text-align:center;
  width:80rpx;
  line-height: 40rpx;
  font-size:30rpx;
  font-weight:400;
  color:#333333;
  margin-left: 20rpx;
}